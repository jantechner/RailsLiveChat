<%= form_with model: [chatroom, Message.new], id: 'new_message_form' do |form| %>

  <div class="field">
    <%= form.text_field :content %>
  </div>

  <%= form.hidden_field :chatroom_id, value: chatroom.id %>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
