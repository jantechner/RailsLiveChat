<div class="chatroom card text-center" style="width: 18rem;">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">Details</a>
      </li>
      <li class="nav-item">
        <%= link_to 'Edit', edit_chatroom_path(chatroom), class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Delete', chatroom, method: :delete, class: 'nav-link' %>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%= chatroom.topic %>
    </h5>
    <p class="card-text"><%= chatroom.description %></p>
  </div>
  <div class="card-footer">
    <%= link_to 'Show chatroom', chatroom, class: 'btn btn-primary btn-block' %>
  </div>
</div>